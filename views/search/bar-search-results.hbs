<div class="databox secondary">
    <h1>Bar Search Results</h1>
    <h1>Text Search: "{{search}}"</h1>
    <div class="databox primary">
        <iframe class="center" width="1200" height="900" style="border:0" loading="lazy" allowfullscreen src="https://www.google.com/maps/embed/v1/search?q={{query}}&key=AIzaSyA8P18svM3ddTHDUV21aw8JGCcfwN0UGjw"></iframe>
    </div>
    <div class="databox primary flex-container">
    {{#each places as |bar|}}
        <div style="padding: 20px; flex: 1 0 30%; margin:10px" class="card databox tertiary">
            <a href="/search/bar{{bar.place_id}}">
            <img style="width: 600px height:auto;" src="https://maps.googleapis.com/maps/api/place/photo?maxwidth=600&maxheight=400&photo_reference={{this.photos.0.photo_reference}}&key=AIzaSyA8P18svM3ddTHDUV21aw8JGCcfwN0UGjw">
            <div class="container">
                <h2><b>{{bar.name}}</b></h2>
                <h3>{{bar.formatted_address}}</h3> 
                <a href="{{bar.website}}"><h3>{{bar.website}}</h3></a>
                <h3>Price Level: {{bar.price_level}} Google Review: {{bar.rating}}</h3>
                {{#if bar.opening_hours.open_now}}
                    <h3 id="open">Open Now</h3></a>
                {{else}}
                    <h3 id="closed">Closed</h3></a>
                {{/if}}
                <iframe name="votar" style="display:none;"></iframe>

                <form action="bar-favourite{{bar.place_id}}" method="post" target="votar">
                    <input type="hidden" id="bar_name" name="bar_name" value="{{bar.name}}">
                    <input type="hidden" id="bar_address" name="bar_address" value="{{bar.formatted_address}}">
                    <input type="hidden" id="favourite_type" name="favourite_type" value="search">
                    {{#if (contains ../bucketlist bar.place_id)}}
                        <button class="secondary" type="submit" id="bucketlist_remove" name="bucketlist_remove">Remove From Bucketlist</button>
                    {{else}}
                        <button class="secondary" type="submit" id="bucketlist_button" name="bucketlist_button">Add To Bucketlist</button>
                    {{/if}}
                    {{#if (contains ../favourites bar.place_id)}}
                        <button class="primary right" type="submit" id="favourite_remove" name="favourite_remove">Remove From Favourites</button>
                    {{else}}
                        <button class="primary right" type="submit" id="favourite_button" name="favourite_button">Add To Favourites</button>
                    {{/if}}
                </form> 
            </div>              
        </div>
    {{/each}}
    </div>
    {{#if page_token}}
    <form action="/search/more-bars" method="post">
        <input type="hidden" name="page_token" value="{{page_token}}">
        <input type="hidden" name="bar_name" value="{{search}}">
        <input type="image" class="center filter-white" style="width: 40px; height:auto; cursor:pointer;" src="/assets/double-down.svg">
    </form>
    {{/if}}
</div>

<script>
    function open_now(bool){
        console.log(bool)
        var open = document.getElementById("open");
        var closed = document.getElementById("closed");
        if (bool == true) {
            open.style.display = "block";
            closed.style.display = "none";
        } else {
            closed.style.display = "block";
            open.style.display = "none";
        }
    }
</script>
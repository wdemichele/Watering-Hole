
<div class="w3-bar w3-black favourites-bar" style="">
    {{!-- <button style="border-radius: 0;" class="w3-bar-item w3-button tablink" onclick="openCity(event,'area')">Area Search</button> --}}
</div>
<div class="databox tertiary bottom-radius fav-search-body" style="">

    <h1 style="margin-top: 3rem;">My Favourites</h1>
    <form action="favourites-search" method="post">
        <div class="center fav-search-box" style="">
            <label style="font-size:20px" for="area_name">Search an Area</label><br>
            <input id="area_name" name="area_name"><br>
        </div>
        <div class="fav-container" style="">
            <fieldset class="fav-bar-settings" style="">
                <legend style="font-size:20px; margin:10px;">Bar Settings</legend>
                <label for="price_range">Price</label>
                <select name="price_range" id="price_range" placeholder="$-$$$">
                    <option name="1" value="1">$</option>
                    <option name="2" value="2">$$</option>
                    <option name="3" value="3">$$$</option>
                    <option name="4" value="4">$$$$</option>
                </select><br><br>
                <label for="radius">Radius</label>
                {{!-- <input type="range" min="1" max="20" value="5000"> --}}
                <select name="radius" id="radius" placeholder="1000m">
                    <option name="1" value="17">500m</option>
                    <option name="2" value="16">1000m</option>
                    <option name="3" value="14.5">2500m</option>
                    <option name="4" value="13.5">5000m</option>
                </select><br><br>
                <label for="below">Include Bucketlist</label>
                <label class="switch right">
                <input name="bucketlist" type="checkbox">
                <span class="slider round"></span>
                </label>
                <br><br>
            </fieldset>

            <fieldset class="fav-search-tags" style="">
                <legend style="font-size:20px">Search Tags</legend>
                {{#each user.tags}}
                <div name="chip" class="chip" onclick="checked(this)">
                    {{this}}
                    <input style="display: none;" type="checkbox" id="{{this}}" name="{{this}}" value="{{this}}">
                </div>
                {{/each}}
            </fieldset>
        </div>
        <div style="margin-top: 2rem;">
            <button style="font-size:20px" class="secondary fav-search-btn" type="reset">Cancel</button>
            <button style="font-size:20px" class="primary right fav-search-btn" type="submit">Search</button><br><br>
        </div>
        
    </form>
</div>

<script>
    function checked(element) {
        element.classList.toggle("tagged");
        var checkbox = element.querySelector("input");
        console.log(checkbox)

        checkbox.checked = !checkbox.checked;

        console.log(checkbox);
    }

    function initialize() {
        var input = document.getElementById('area_name');
        new google.maps.places.Autocomplete(input);
    }

    google.maps.event.addDomListener(window, 'load', initialize);
</script>
<div class="flex-container databox secondary">
    <div>
        <img style="width: 300px; height: auto;" src="\assets\nav\abstract-user-flat-4.svg">
        <h1>{{user.name}}</h1>
        <h2>@{{user.username}}</h1>

        <a><h1>Friends</h1>
        <h1>{{array_length user.friends}}</h1></a>
    </div>

    <div>
        <h2>Recently Visited:</h2>
        <div class="flex-container databox secondary">
            {{#each user.recent_bars}}
                <div class="databox tertiary">
                    <a href="/search/bar{{this.id}}"><h2>{{this.name}}</h2></a>
                </div>
            {{/each}}
        </div>
        <h2>Recent Events:</h2>
        <div class="flex-container secondary">
            <div class="databox tertiary">
                <h1>Coming Soon</h1>
            </div>
        </div>
    </div>
</div>
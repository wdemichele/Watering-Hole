<main>
    <div class="body-text quaternary center" style="width: 40%;padding:3% 5% 2% 5%;margin-top:5%;">
        <a><img onclick= "history.back()" src="/assets/backbutton.svg" alt="back-button" class="backbutton-icon left"></a>
        <h1>Create Account</h1>
        <section>
            <form action='create' method="post">                  
                <div class="column" style="padding-bottom:5%;">
                    <label for="name">Full Name:</label>
                    <input type="formtext" name="name" id="name" placeholder="John Doe">                                                        

                    <label for="username">Username:</label>
                    <input type="formtext" name="username" id="username" placeholder="username">

                    <label for="password">Password:</label>
                    <input type="password" name="password" id="password" placeholder="********">
                                            
                </div>
                <div class="flex-container" style="padding-bottom: 5%;">
                    <button style="flex:1;margin-left:5%;" class="tertiary left" type="reset" id="cancel">Cancel</button>
                    <button style="flex:1;margin-right:5%;" class="secondary right" type="submit" id="submit">Register New User</button> <!-- submit button --> 
                </div>
                
            </form>
        </section>
    </div>
</main>

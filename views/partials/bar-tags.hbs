<div class="databox secondary">
    <h2>Add My Tags</h2>

    {{#each tags}}
        <div class="chip">
            <span style="padding: 0; margin: 0;">{{this}}</span>
            <input style="padding: 0; margin: 0;" type="checkbox" id="{{this}}" name="{{this}}" value="{{this}}">
        </div>
    {{/each}}

    <br><br>
    
    <button class="primary right" type="submit" id="tags_button" name="tags_button">Add Tags</button>
        
</div>